{
  "name": "lab-init-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:vctorChamizo/lab-init-graphql.git",
  "author": "vctorChamizo <victor.chamizo96@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "build-watch": "tsc -w",
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/app.ts",
    "seed": "ts-node ./src/db/seeds/index.ts",
    "lint": "node_modules/.bin/eslint --ext ./src/**/*.ts --ignore-pattern node_modules/ --fix",
    "prepare": "husky install"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**"
    ],
    "env": {
      "NODE_ENV": "sandbox"
    }
  },
  "dependencies": {
    "@sentry/node": "^6.2.1",
    "apollo-server": "^2.21.0",
    "apollo-server-express": "^2.21.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware-sentry": "^3.2.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.11.18",
    "pino": "^6.11.1",
    "pino-pretty": "^4.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/gravatar": "^1.8.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/pino": "^6.3.6",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "husky": "^5.1.3",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2"
  }
}
